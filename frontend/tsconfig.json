{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true       // ðŸ‘ˆ prevents TS from trying to write .ts/.js files
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist"]
}
